<odoo>
    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='inventory']" position="after">
                <page string="Product Standards">
                    <group string="Product Standards">
                        <field name="standard_ids"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_product_template_form_inherit_mgmtsystem" model="ir.ui.view">
        <field name="name">product.template.form.inherit.mgmtsystem.standard.product</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="🛡️ Related Standards &amp; Domains *NEW*">

                        <group string="🛡️ Related Standards">
                            <field name="mgmtsystem_standard_product_ids" context="{'default_product_id': id}">
                                <list editable="bottom">

                                    <field name="standard_id"/>
                                    <!-- <field name="standard_version"/> -->
                                    <field name="standard_name"/>
                                    <field name="standard_title"/>
                                    <field name="standard_state"/>
                                    <field name="proof_of_conformity"/>
                                    <field name="implementation_evidence"/>
                                    <field name="document_ids" widget="many2many_tags"/>
                                    <!-- Add other fields as needed -->
                                </list>
                            </field>
                        </group>
                        <group string="🛡️ Related Standards Domains">
                            <field name="product_standard_domain_ids" context="{'default_product_id': id}">
                                <list editable="bottom">
                                    <field name="standard_domain_id"/>
                                    <field name="product_standard_domain_name"/>

                                    <!-- <field name="product_standard_domain_title"/>
                                    <field name="product_standard_domain_state"/> -->
                                    <field name="proof_of_conformity"/>
                                    <field name="implementation_evidence"/>
                                    <field name="document_ids" widget="many2many_tags"/>
                                    <!-- Add other fields as needed -->
                                </list>
                            </field>
                        </group>

                </page>
            </notebook>
        </field>
    </record>
</odoo>